{
    "name": "service-map-viz",
    "version": "0.1.7",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint \"src/**/*.ts\" \"e2e/**/*.ts\" --max-warnings 200",
        "lint:fix": "eslint \"src/**/*.ts\" \"e2e/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\" \"e2e/**/*.ts\" \"*.{js,json,html}\"",
        "verify": "npm run format && npm run lint && npm test && npx playwright test",
        "prepare": "husky"
    },
    "lint-staged": {
        "src/**/*.{ts,js,json,css,html}": [
            "prettier --write",
            "eslint --fix"
        ],
        "e2e/**/*.ts": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{js,json,html}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "cytoscape": "^3.29.2",
        "cytoscape-dagre": "^2.5.0",
        "cytoscape-edgehandles": "^4.0.1",
        "cytoscape-fcose": "^2.2.0",
        "papaparse": "^5.4.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@testing-library/dom": "^10.4.1",
        "@types/cytoscape": "^3.21.9",
        "@types/papaparse": "^5.5.2",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "@vitest/browser": "^4.0.16",
        "@vitest/coverage-v8": "^4.0.16",
        "autoprefixer": "^10.4.19",
        "eslint": "8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "husky": "^9.1.7",
        "jsdom": "^27.3.0",
        "lint-staged": "^16.2.7",
        "playwright": "^1.57.0",
        "postcss": "^8.4.38",
        "prettier": "^3.8.0",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.9.3",
        "vite": "^5.4.10",
        "vitest": "^4.0.16"
    }
}
